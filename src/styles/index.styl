section
  padding: 1rem;

.toast
  bottom: 0;
  font-size: 0.8rem;
  max-height: 30%;
  max-width: 30%;
  opacity:0.8;
  overflow: hidden;
  position: fixed;
  right: 0;
  z-index: 999999999;

  &:hover
    opacity: 1;

  .toast-message
    background: rgba(0,0,0,0.7);
    border-radius: 3px 0 0 3px;
    color: #DDD;
    margin-bottom: 0.25rem;
    padding: 0.5rem 2rem 0.5rem 1rem;
    position: relative;

    &.toast-error
      background: rgba(160,0,0,0.8);

    &.toast-success
      background: rgba(0,160,0,0.8);

    &.toast-warning
      background: rgba(220,120,0,0.8);

    .toast-dismiss
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 4px;
      box-sizing: border-box;
      color: #CCC;
      cursor: pointer;
      display: block;
      height: 1rem;
      line-height: 0.8rem;
      padding: 0;
      position: absolute;
      right: 0.5rem;
      text-align: center;
      bottom: 0.5rem;
      width: 1rem;

      &:hover
        background: rgba(255,255,255,0.5);
        color: black;

nav
  .navbar-nav
    .nav-item
      line-height: 2.5rem;
      margin: -0.5rem 0.5rem;

    .active
        background: rgba(0,0,0,0.2);

i
  &.mark-icon
    background: none;
    box-sizing: border-box;
    display: inline-block;
    font-style: normal;
    margin: 0 0 0 0;
    padding: 0;
    position: relative;
    text-align: center;
    text-decoration: none;

    &.icon-xs
      font-size: 1rem;
      height: 1.2rem;
      line-height: 1.3rem;

    &.icon-sm
      font-size: 1.5rem;
      height: 1.5rem;
      line-height: 1.5rem;

    &.icon-md
      font-size: 2rem;
      height: 1.7rem;
      line-height: 1.8rem;

    &.icon-lg
      font-size: 4rem;
      height: 3.5rem;
      line-height: 3.5rem;

    &.icon-xl
      font-size: 5rem;
      height: 4.4rem;
      line-height: 4.45rem;

    span
      display: inline-block;
      vertical-align: baseline;

    &.icon-spin
      &.icon-xs
        font-size: 0.8rem;
        height: 1.2rem;
        line-height: 1rem;
        width: 1.2rem;

        span
          height: 1rem;
          line-height: 1rem;
          width: 1rem;

      &.icon-sm
        font-size: 1.5rem;
        height: 1.5rem;
        line-height: 1.35rem;
        width: 1.5rem;

        span
          height: 1.4rem;
          line-height: 1.4rem;
          width: 1.4rem;

      &.icon-md
        font-size: 2rem;
        height: 1.7rem;
        line-height: 1rem;
        width: 1.7rem;

        span
          height: 1.7rem;
          line-height: 1.7rem;
          width: 1.7rem;

      &.icon-lg
        font-size: 4rem;
        height: 3.5rem;
        line-height: 2rem;
        width: 3.5rem;

        span
          height: 3.5rem;
          line-height: 3.45rem;
          width: 3.5rem;

      &.icon-xl
        font-size: 5rem;
        height: 4.4rem;
        line-height: 2rem;
        width: 4.4rem;

        span
          height: 4.4rem;
          line-height: 4.2rem;
          width: 4.4rem;

      span
        animation: spinner 1s linear infinite;
        vertical-align: middle;

@keyframes spinner
  to {
    opacity: 0.1;
    transform: rotate(360deg);
  }
